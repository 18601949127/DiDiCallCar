<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/main_titlebar" />


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="@color/logoColor"
        app:tabSelectedTextColor="@color/logoColor"
        app:tabTextColor="@android:color/black" />

        <com.tantuo.didicar.view.NoScrollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.tantuo.didicar.view.NoScrollViewPager>



</LinearLayout>