<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/background_white">

        <TextView
            android:id="@+id/tv_left_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="上车："
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_centerInParent="true"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:shadowRadius="3.0"
            android:shadowColor="@color/logoColor"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_green_dot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_green_dot" />

        <AutoCompleteTextView
            android:id="@+id/tv_start_location"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/icon_green_dot"
            android:layout_height="wrap_content"
            android:hint="从哪里出发？请输入行程起始地址"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_white">



        <TextView
            android:id="@+id/tv_left_destin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="目的地："
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:layout_centerInParent="true"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            android:shadowRadius="3.0"
            android:shadowColor="@color/logoColor"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/icon_red_dot"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_red_dot" />

        <AutoCompleteTextView
            android:id="@+id/tv_destin_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_red_dot"
            android:hint= "@string/ninyaoquna"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>